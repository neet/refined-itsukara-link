    "@headlessui/react": "^0.2.0",
    "@mdx-js/react": "^1.6.22",
    "@next/mdx": "^10.0.4",
    "@tailwindcss/aspect-ratio": "^0.2.0",
    "@tailwindcss/postcss7-compat": "^2.0.2",
    "autoprefixer": "^9",
    "classnames": "^2.2.6",
    "dayjs": "^1.9.7",
    "isomorphic-unfetch": "^3.1.0",
    "next": "10.0.3",
    "polished": "^4.0.5",
    "postcss": "^7",
