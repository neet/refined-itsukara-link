{
  "name": "refined-itsukara-link",
  "private": true,
  "version": "0.0.1",
  "author": "Ryo Igarashi <n33t5hin@gmail.com>",
  "license": "AGPL-3.0-or-later",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "test": "run-s test:*",
    "test:jest": "jest --coverage",
    "test:eslint": "eslint -c .eslintrc.json 'packages/**/*.{ts,tsx}'",
    "test:stylelint": "stylelint 'packages/**/*.{tsx,tsx}'",
    "build": "yarn workspace @ril/client run build && yarn workspace @ril/gateway run build",
    "watch": "yarn workspace @ril/client run watch",
    "start": "yarn workspace @ril/server run start",
    "manage:translations": "i18next-scanner 'packages/**/*.{ts,tsx}'"
  },
  "devDependencies": {
    "@types/jest": "^25.2.1",
    "@typescript-eslint/eslint-plugin": "^2.30.0",
    "@typescript-eslint/parser": "^2.30.0",
    "codecov": "^3.7.1",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.21.2",
    "eslint-plugin-react-hooks": "^4.0.0",
    "husky": "^4.2.5",
    "i18next-scanner": "^2.11.0",
    "i18next-scanner-typescript": "^1.0.6",
    "jest": "^25.5.4",
    "lint-staged": "^10.2.11",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.5",
    "stylelint": "^13.3.3",
    "stylelint-config-property-sort-order-smacss": "^6.3.0",
    "stylelint-config-recommended": "^3.0.0",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-processor-styled-components": "^1.10.0",
    "ts-jest": "^25.5.1",
    "typescript": "^3.8.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write",
      "stylelint"
    ]
  }
}
