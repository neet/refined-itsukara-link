    "jest-date-mock": "^1.0.8",
    "prettier": "^2.2.1",
    "scaffdog": "^0.3.0",
    "ts-jest": "^26.4.4",
    "ts-loader": "^8.0.12"
  },
  "jest": {
    "preset": "ts-jest",
    "globals": {
      "ts-jest": {
        "tsconfig": {
          "jsx": "react-jsx"
        }
      }
    },
    "moduleNameMapper": {
      "\\.(css)$": "identity-obj-proxy"
    },
    "collectCoverageFrom": [
      "**/*.{ts,tsx}",
      "!**/*.d.ts",
      "!**/node_modules/**"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/.next/",
      "/.vercel/"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/scripts/test-setup.ts"
    ]
  }
}
