{
  "name": "refined-itsukara-link",
  "private": true,
  "version": "0.0.1",
  "author": "Ryo Igarashi <n33t5hin@gmail.com>",
  "license": "AGPL-3.0-or-later",
  "scripts": {
    "test": "run-s test:*",
    "test:jest": "jest --coverage",
    "test:eslint": "eslint '{client,server}/**/*.{ts,tsx}'",
    "test:prettier": "prettier -c '{client,server}/**/*.{ts,tsx}'",
    "test:stylelint": "stylelint 'client/**/*.{tsx,tsx}'",
    "test:tsc": "tsc -p ./client",
    "build": "lerna run build --stream",
    "start": "lerna run start --scope @ril/server --stream",
    "manage:translations": "lerna run manage:translations --stream"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "linters": {
      "*.{ts,tsx}": [
        "eslint --fix",
        "prettier --write",
        "stylelint",
        "git add"
      ]
    }
  },
  "dependencies": {
    "lerna": "^3.13.4"
  },
  "devDependencies": {
    "@types/jest": "^24.0.11",
    "@typescript-eslint/eslint-plugin": "^1.4.2",
    "@typescript-eslint/parser": "^1.4.2",
    "coveralls": "^3.0.3",
    "eslint": "^5.14.1",
    "eslint-config-prettier": "^4.1.0",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-react": "^7.12.4",
    "husky": "^2.1.0",
    "jest": "^24.5.0",
    "jest-fetch-mock": "^2.1.1",
    "jest-styled-components": "^6.3.1",
    "lint-staged": "^8.1.4",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.16.4",
    "react-testing-library": "^7.0.0",
    "stylelint": "^10.0.1",
    "stylelint-config-property-sort-order-smacss": "^4.0.2",
    "stylelint-config-recommended": "^2.1.0",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-processor-styled-components": "^1.5.2"
  }
}
