{
  "name": "refined-itsukara-link",
  "private": true,
  "version": "0.0.1",
  "author": "Ryo Igarashi <n33t5hin@gmail.com>",
  "license": "AGPL-3.0-or-later",
  "scripts": {
    "test": "run-s test:*",
    "test:jest": "jest --coverage",
    "test:tslint": "tslint -c tslint.yml 'packages/**/*.{ts,tsx}'",
    "test:prettier": "prettier -c 'packages/**/*.{ts,tsx}'",
    "test:stylelint": "stylelint 'packages/**/*.{tsx,tsx}'",
    "test:tsc": "tsc -p ./client",
    "build": "lerna run build --stream",
    "start": "lerna run start --scope @ril/server --stream",
    "manage:translations": "lerna run manage:translations --stream"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "linters": {
      "*.{ts,tsx}": [
        "tslint --fix",
        "prettier --write",
        "stylelint",
        "git add"
      ]
    }
  },
  "dependencies": {
    "lerna": "^3.13.4"
  },
  "devDependencies": {
    "@types/jest": "^24.0.11",
    "coveralls": "^3.0.3",
    "husky": "^2.1.0",
    "jest": "^24.5.0",
    "lint-staged": "^8.1.4",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.16.4",
    "stylelint": "^10.0.1",
    "stylelint-config-property-sort-order-smacss": "^4.0.2",
    "stylelint-config-recommended": "^2.1.0",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-processor-styled-components": "^1.5.2",
    "ts-jest": "^24.0.2",
    "tslint": "^5.16.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-microsoft-contrib": "^6.1.1",
    "tslint-react": "^4.0.0",
    "typescript": "^3.4.5"
  }
}
